{% extends 'loginBack.html.twig' %}


{% block email %}
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="email address" required autofocus>

{% endblock %}
{% block password %}
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="password" required>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
{% endblock %}
{% block remember_me %}
    <input type="checkbox" name="_remember_me"> Remember me
{% endblock %}
{% block reset_password %}
    href="/reset-password" class="text-info text-gradient font-weight-bold">Forgot Password ?
{% endblock %}
{% block sign_in %}
Sign in
{% endblock %}
{% block sign_up %}
    href="/register" class="text-info text-gradient font-weight-bold">Sign up
{% endblock %}